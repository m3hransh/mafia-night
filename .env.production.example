# Database Configuration
DB_USER=mafia_user
DB_PASSWORD=your_secure_password_here
DB_NAME=mafia_night

# Backend Configuration
PORT=8080
GIN_MODE=release

# CORS Configuration
# Comma-separated list of allowed origins (frontend URLs)
# Examples:
#   - With domain: http://mafia.example.com,https://mafia.example.com
#   - With IP: http://123.456.789.012,https://123.456.789.012
ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://your-domain.com/api

# Deployment Configuration
DEPLOY_USER=deploy
DEPLOY_HOST=your-vps-ip-or-domain
DEPLOY_PATH=/opt/mafia-night

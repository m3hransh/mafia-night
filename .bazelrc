# Bazel configuration for NixOS

# Inherit PATH from environment (includes nix paths)
build --action_env=PATH

# Inherit CC from environment (if set)
build --action_env=CC

# Use local strategy (less sandboxing) for NixOS compatibility
build --spawn_strategy=local

# Show detailed error messages
build --verbose_failures

# Test output options
test --test_output=errors

# Try to import user-specific config (optional, not committed)
try-import %workspace%/.bazelrc.local
